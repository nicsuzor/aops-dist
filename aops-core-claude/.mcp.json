{
  "mcpServers": {
    "memory": {
      "type": "http",
      "url": "http://services.stoat-musical.ts.net:8026/mcp",
      "headers": {
        "Authorization": "Bearer ${MCP_MEMORY_API_KEY}"
      }
    },
    "task_manager": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${CLAUDE_PLUGIN_ROOT}",
        "python",
        "mcp_servers/tasks_server.py"
      ],
      "env": {
        "AOPS": "${AOPS}",
        "ACA_DATA": "${ACA_DATA}"
      }
    }
  }
}