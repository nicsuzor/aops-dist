{
  "mcpServers": {
    "memory": {
      "headers": {
        "Authorization": "Bearer ${MCP_MEMORY_API_KEY}"
      },
      "serverUrl": "http://services.stoat-musical.ts.net:8026/mcp"
    },
    "task_manager": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${extensionPath}",
        "python",
        "mcp_servers/tasks_server.py"
      ],
      "env": {
        "AOPS": "${AOPS}",
        "ACA_DATA": "${ACA_DATA}"
      }
    }
  }
}