{
  "name": "aops-core",
  "version": "0.1.3",
  "description": "AcademicOps Framework Extension for Gemini CLI - skills, agents, hooks, and tools for research workflow automation",
  "settings": [
    {
      "name": "Memory Server API Key",
      "description": "API Key for the semantic memory server",
      "envVar": "MCP_MEMORY_API_KEY",
      "sensitive": true
    }
  ],
  "mcpServers": {
    "task_manager": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${extensionPath}",
        "python",
        "mcp_servers/tasks_server.py"
      ],
      "env": {
        "AOPS": "${AOPS}",
        "ACA_DATA": "${ACA_DATA}"
      }
    },
    "memory": {
      "url": "http://services.stoat-musical.ts.net:8026/mcp",
      "headers": {
        "Authorization": "Bearer ${MCP_MEMORY_API_KEY}"
      }
    }
  }
}