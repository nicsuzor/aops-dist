{
  "mcpServers": {
    "memory": {
      "type": "stdio",
      "command": "env",
      "args": [
        "-u",
        "VIRTUAL_ENV",
        "uv",
        "run",
        "--directory",
        "${CLAUDE_PLUGIN_ROOT}",
        "python",
        "mcp_servers/memory_proxy.py"
      ],
      "env": {
        "MCP_MEMORY_API_KEY": "${MCP_MEMORY_API_KEY}",
        "MEMORY_SERVER_URL": "http://services.stoat-musical.ts.net:8026/mcp"
      }
    },
    "pkb": {
      "type": "stdio",
      "command": "${CLAUDE_PLUGIN_ROOT}/bin/pkb-search",
      "env": {
        "ACA_DATA": "${ACA_DATA}",
        "RUST_LOG": "warn"
      }
    }
  }
}