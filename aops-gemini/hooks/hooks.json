{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${extensionPath} python3 hooks/router.py --client gemini SessionStart",
            "timeout": 15000
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${extensionPath} python3 hooks/router.py --client gemini BeforeTool",
            "timeout": 5000
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${extensionPath} python3 hooks/router.py --client gemini AfterTool",
            "timeout": 5000
          }
        ]
      }
    ],
    "BeforeAgent": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${extensionPath} python3 hooks/router.py --client gemini BeforeAgent",
            "timeout": 5000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=${extensionPath} python3 hooks/router.py --client gemini SessionEnd",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}