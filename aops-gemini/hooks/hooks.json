{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${extensionPath} python hooks/router.py --client gemini",
            "timeout": 15000
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${extensionPath} python hooks/router.py --client gemini",
            "timeout": 5000
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${extensionPath} python hooks/router.py --client gemini",
            "timeout": 5000
          }
        ]
      }
    ],
    "BeforeAgent": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${extensionPath} python hooks/router.py --client gemini",
            "timeout": 5000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory ${extensionPath} python hooks/router.py --client gemini",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}